{
    "yaml.schemas" : {
    "mig_yaml_schema.json": ["/config/*.yaml.j2"] 
    },

   "semanticTockens.enable": true,
   "semanticTockens.filetypes": ["c"],

   "diagnostic.checkCurrentLine": true,

   "python.autoComplete..extraPaths": [],

  "languageserver": {
    "go": {
      "command": "~/go/bin/gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "html" : {
        "command": "html-languageserver",
        "filetypes": ["html"],
        "initializationOptions": {
            "embeddedLanguages" : {
                "css": true,
                "javascript": true
            }
        }
    },
   "terraform": {
           "command": "terraform-ls",
           "args": ["serve"],
           "filetypes": [
                   "terraform",
                   "tf"
           ],
           "initializationOptions": {},
           "settings": {}
   }


  }
}
